{
    "name": "bsa-2025-checkly-automation-test",
    "version": "1.0.0",
    "description": "Automated API and UI tests for the Checkly project (Binary Studio Academy 2025)",
    "main": "index.js",
    "scripts": {
        "test": "npx playwright test",
        "test:local": "dotenv -e .env.local -- npx playwright test",
        "test:production": "dotenv -e .env.production -- npx playwright test",
        "test:ui": "npx playwright test --ui",
        "test:ui:local": "dotenv -e .env.local -- npx playwright test --ui",
        "test:ui:production": "dotenv -e .env.production -- npx playwright test --ui",
        "report": "npx playwright show-report"
    },
    "repository": {
        "type": "git",
